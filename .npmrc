# Reduce memory usage during installation
maxsockets=3
# Cache optimization
cache=/tmp/npm-cache
# Speed up installation
prefer-offline=true
# Reduce verbosity
loglevel=warn
# Use npm registry mirror (if needed)
# registry=https://registry.npmjs.org/
# Ignore optional packages that might fail
optional=false
# Strict peer dependencies to avoid conflicts
strict-peer-deps=true
